{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2017"],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "baseUrl": "./src",
    "paths": {
      "@screens/*": ["./screens/*"],
      "@components/*": ["./components/*"],
      "@contexts/*": ["./contexts/*"],
      "@interfaces/*": ["./interfaces/*"],
      "@services/*": ["./services/*"],
      "@constants/*": ["./constants/*"],
      "@utils/*": ["./utils/*"],
      "@mocks/*": ["./mocks/*"],
      "@styles/*": ["./styles/*"],
      "@navigations/*": ["./navigations/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "App.tsx"
  ]
}
